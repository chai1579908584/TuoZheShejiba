<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="style_RadioButton">

    <item name="android:layout_width">match_parent</item>

    <item name="android:layout_height">wrap_content</item>

    <item name="android:button">@null</item>

    <item name="android:background">#ffffff</item>

    <item name="android:layout_weight">1</item>

    <item name="android:gravity">center</item>

    <item name="android:layout_gravity">center</item>

    <item name="android:textSize">12sp</item>

</style>


    <style name="style_home_radiobutton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="SpinnerStyle">
        <item name="colorAccent">#888888</item>
        <item name="colorControlNormal">#ddffffff</item> <!--改变了spinner的颜色  -->
    </style>
    <style name="tablayout">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppThemes" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/start</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--发布动态图片选择样式，注意每一项都不能少-->
    <style name="stylePhotoSina" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--标题栏背景色-->
        <item name="colorPrimary">@color/white</item>
        <!--状态栏背景色-->
        <item name="colorPrimaryDark">@color/white</item>
        <!--是否改变图片列表界面状态栏字体颜色为黑色-->
        <item name="picture.statusFontColor">true</item>
        <!--返回键图标-->
        <item name="picture.leftBack.icon">@drawable/icon_black_back</item>
        <!--标题下拉箭头-->
        <item name="picture.arrow_down.icon">@drawable/icon_black_back</item>
        <!--标题上拉箭头-->
        <item name="picture.arrow_up.icon">@drawable/icon_black_back</item>
        <!--标题文字颜色-->
        <item name="picture.title.textColor">@color/black</item>
        <!--标题栏右边文字-->
        <item name="picture.right.textColor">@color/black</item>
        <!--图片列表勾选样式-->
        <item name="picture.checked.style">@drawable/selector_checkbox</item>
        <!--开启图片列表勾选数字模式,开启的话勾选样式要换-->
        <item name="picture.style.checkNumMode">false</item>
        <!--选择图片样式0/9-->.
        <item name="picture.style.numComplete">false</item>
        <!--图片列表底部背景色-->
        <item name="picture.bottom.bg">@color/color_fa</item>
        <!--图片列表预览文字颜色-->
        <item name="picture.preview.textColor">@color/app_f9d200</item>
        <!--图片列表已完成文字颜色-->
        <item name="picture.complete.textColor">@color/app_f9d200</item>
        <!--图片已选数量圆点背景色-->
        <item name="picture.num.style">@color/app_f9d200</item>
        <!--预览界面标题文字颜色-->
        <item name="picture.ac_preview.title.textColor">@color/black</item>
        <!--预览界面已完成文字颜色-->
        <item name="picture.ac_preview.complete.textColor">@color/app_f9d200</item>
        <!--预览界面标题栏背景色-->
        <item name="picture.ac_preview.title.bg">@color/white</item>
        <!--预览界面底部背景色-->
        <item name="picture.ac_preview.bottom.bg">@color/white</item>
        <!--预览界面状态栏颜色-->
        <item name="picture.status.color">@color/white</item>
        <!--预览界面返回箭头-->
        <item name="picture.preview.leftBack.icon">@drawable/icon_black_back</item>
        <!--是否改变预览界面状态栏字体颜色为黑色-->
        <item name="picture.preview.statusFontColor">true</item>
        <!--裁剪页面标题背景色-->
        <item name="picture.crop.toolbar.bg">@color/white</item>
        <!--裁剪页面状态栏颜色-->
        <item name="picture.crop.status.color">@color/white</item>
        <!--裁剪页面标题文字颜色-->
        <item name="picture.crop.title.color">@color/white</item>
        <!--相册文件夹列表选中图标-->
        <item name="picture.folder_checked_dot">@drawable/orange_oval</item>
    </style>

</resources>
