<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tz.tuozhe.Activity.SetActivity"
    android:background="#ffffff"
    >

    <ImageView
        android:id="@+id/return_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/return_re"
        android:layout_marginTop="@dimen/x12"
        android:layout_marginLeft="@dimen/x8"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的设置"
        android:textSize="22sp"
        android:textColor="#333333"
        android:layout_marginTop="@dimen/x10"
        android:layout_centerHorizontal="true"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#b2b2b2"
        android:layout_below="@+id/return_"
        android:layout_marginTop="@dimen/x12"
        android:id="@+id/line"
        />

    <LinearLayout
        android:id="@+id/ll_box"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:background="#f2f2f2"
        >

        <RelativeLayout
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_title"
            android:background="#f2f2f2"
            >
            <RelativeLayout
                android:id="@+id/cache"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x50"
                android:background="#ffffff"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="清理缓存"
                    android:layout_marginLeft="@dimen/x18"
                    android:textSize="18sp"
                    android:textColor="#303030"
                    />
                <TextView
                    android:id="@+id/cache_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x18"
                    android:text="20.00M"
                    android:textSize="18sp"
                    android:textColor="#979797"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/account_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x50"
                android:layout_below="@+id/cache"
                android:background="#ffffff"
                android:layout_marginTop="@dimen/x6"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="账号管理"
                    android:layout_marginLeft="@dimen/x18"
                    android:textSize="18sp"
                    android:textColor="#303030"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/more"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x18"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/dynamic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x50"
                android:layout_below="@+id/account_number"
                android:background="#ffffff"
                android:layout_marginTop="@dimen/x6"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="消息提醒"
                    android:layout_marginLeft="@dimen/x18"
                    android:textSize="18sp"
                    android:textColor="#303030"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/more"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x18"
                    />

            </RelativeLayout>
            <View
                android:id="@+id/dynamic_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/dynamic"
                android:background="#f2f2f2"
                />
            <RelativeLayout
                android:id="@+id/feedback"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x50"
                android:layout_below="@+id/dynamic_line"
                android:background="#ffffff"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="意见反馈"
                    android:layout_marginLeft="@dimen/x18"
                    android:textSize="18sp"
                    android:textColor="#303030"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/more"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x18"
                    />
            </RelativeLayout>
            <View
                android:id="@+id/feedback_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/feedback"
                android:background="#f2f2f2"
                />


            <RelativeLayout
                android:id="@+id/in_regard_to"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x50"
                android:layout_below="@+id/feedback_line"
                android:background="#ffffff"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="关于我们"
                    android:layout_marginLeft="@dimen/x18"
                    android:textSize="18sp"
                    android:textColor="#303030"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/more"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x18"
                    />
            </RelativeLayout>
            <View
                android:id="@+id/in_regard_to_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/in_regard_to"
                android:background="#f2f2f2"
                />
        </RelativeLayout>


    </LinearLayout>

    <Button
        android:id="@+id/logout"
        android:layout_width="@dimen/x250"
        android:layout_height="@dimen/x35"
        android:layout_below="@+id/ll_box"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x22"
        android:text="退出账号"
        android:textSize="20sp"
        android:textColor="#4b4b4b"
        android:background="@drawable/shape_user_pass_kuang"
        />

</RelativeLayout>
