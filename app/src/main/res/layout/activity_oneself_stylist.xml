<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.tz.tuozhe.Activity.OneselfStylistActivity"
    android:background="#ffffff"
    >

    <ImageView
        android:id="@+id/return_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/return_re"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginLeft="@dimen/x10"
        />
    <TextView
        android:id="@+id/even_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:text="修改资料"
        android:textColor="#999999"
        android:textSize="20sp"
        />
    <ImageView
        android:id="@+id/head_image"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/x80"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/return_"
        android:layout_marginTop="@dimen/x8"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#030303"
        android:textSize="26sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/head_image"
        android:layout_marginTop="@dimen/x10"
        />
    <TextView
        android:id="@+id/introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@+id/title_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x2"
        android:textColor="#999999"
        />
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/introduce"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x2"
        android:textSize="16sp"
        android:textColor="#999999"
        />

    <LinearLayout
        android:id="@+id/ll_selector"
        android:layout_width="@dimen/x190"
        android:layout_height="@dimen/x55"
        android:orientation="horizontal"
        android:layout_below="@+id/price"
        android:layout_marginTop="@dimen/x8"
        android:layout_centerHorizontal="true"
        >
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x15"
            >
            <TextView
                android:id="@+id/attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:textSize="16sp"
                android:textColor="#999999"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/attention_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#616161"
                android:textSize="24sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/attention"
                android:layout_marginLeft="@dimen/x15"
                />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/x16"
            android:layout_marginTop="@dimen/x18"
            android:background="#cccccc"

            />

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x15"
            >
            <TextView
                android:id="@+id/fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粉丝"
                android:textSize="16sp"
                android:textColor="#999999"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/fans_number"
                android:layout_marginRight="@dimen/x15"
                />
            <TextView
                android:id="@id/fans_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#616161"
                android:textSize="24sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/yinying"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x10"
        android:background="#f4f4f4"
        android:layout_below="@+id/ll_selector"
        />

    <com.ruffian.library.RVPIndicator
        android:id="@+id/my_rvpindicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_below="@+id/yinying"
        android:layout_centerHorizontal="true"
        app:text_color_normal="#333333"
        app:text_color_selected="#ffd200"
        app:text_size="20sp"
        app:indicator_color="#ffd200"
        app:indicator_style="line"
        app:indicator_height="2dp"
        app:indicator_visible_count="3"
        >

    </com.ruffian.library.RVPIndicator>


    <TextView
        android:id="@+id/yinying2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x10"
        android:background="#f4f4f4"
        android:layout_below="@+id/my_rvpindicator"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/my_viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yinying2"

        >

    </android.support.v4.view.ViewPager>

</RelativeLayout>
