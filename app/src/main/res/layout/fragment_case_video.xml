<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    >
    <com.example.tz.tuozhe.Utils.LazyScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_show"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x220"
        android:background="#ffffff"
        >
      <ImageView
          android:id="@+id/image_show"
          android:layout_width="match_parent"
          android:layout_height="@dimen/x140"
          android:layout_marginLeft="@dimen/x10"
          android:layout_marginTop="@dimen/x10"
          android:layout_marginRight="@dimen/x10"
          android:background="#ffea8e"
          />
        <TextView
            android:id="@+id/title_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="家装施工图教程"
            android:layout_below="@+id/image_show"
            android:layout_marginTop="@dimen/x15"
            android:textColor="#353535"
            android:textSize="20sp"
            android:layout_marginLeft="@dimen/x18"
            />
        <TextView
            android:id="@+id/teacher_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="家装施工图教程"
            android:layout_below="@+id/image_show"
            android:layout_marginTop="@dimen/x18"
            android:textColor="#999999"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/x18"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x18"
            />
        <TextView
            android:id="@+id/time_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开课时间：3月14日 09：00"
            android:layout_below="@+id/title_show"
            android:layout_marginTop="@dimen/x8"
            android:textColor="#999999"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/x18"
            android:layout_marginRight="@dimen/x18"
            />
        <TextView
            android:id="@+id/people_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已报名：3000人"
            android:layout_below="@+id/title_show"
            android:layout_marginTop="@dimen/x8"
            android:textColor="#999999"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/x18"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x18"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/video"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x200"
        android:layout_below="@+id/rl_show"
        android:layout_marginTop="@dimen/x7"
        android:background="#ffffff"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设计入门"
            android:textSize="20sp"
            android:textColor="#333333"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginLeft="@dimen/x12"
            />
        <TextView
            android:id="@+id/viedo_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多视频>"
            android:textSize="16sp"
            android:textColor="#a4a4a4"
            android:layout_marginTop="@dimen/x12"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x4"
            />
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/ll_image"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x160">
            <RelativeLayout
                android:id="@+id/rr_video1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/video_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x100"
                    android:background="#FFEA8E"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:id="@+id/text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="办公室空间设计"
                    android:textSize="20sp"
                    android:textColor="#333333"
                    android:layout_below="@+id/video_1"
                    android:layout_marginTop="@dimen/x6"
                    android:layout_marginLeft="@dimen/x8"
                    />
                <TextView
                    android:id="@+id/number1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300人已购买"
                    android:layout_below="@+id/text_1"
                    android:layout_marginTop="@dimen/x6"
                    android:layout_marginLeft="@dimen/x8"
                    android:textColor="#999999"
                    />
                <TextView
                    android:id="@+id/price1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="￥300.00"
                    android:textColor="#da1b1a"
                    android:layout_below="@+id/text_1"
                    android:layout_marginTop="@dimen/x6"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x3"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rr_video2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/x3"
                >
                <ImageView
                    android:id="@+id/video_2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x100"
                    android:background="#FFEA8E"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:id="@+id/text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="办公室空间设计"
                    android:textSize="20sp"
                    android:textColor="#333333"
                    android:layout_below="@+id/video_2"
                    android:layout_marginTop="@dimen/x6"
                    android:layout_marginLeft="@dimen/x8"
                    />
                <TextView
                    android:id="@+id/number2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300人已购买"
                    android:layout_below="@+id/text_2"
                    android:layout_marginTop="@dimen/x6"
                    android:layout_marginLeft="@dimen/x8"
                    android:textColor="#999999"
                    />
                <TextView
                    android:id="@+id/price2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="￥300.00"
                    android:textColor="#da1b1a"
                    android:layout_below="@+id/text_2"
                    android:layout_marginTop="@dimen/x6"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x3"
                    />
            </RelativeLayout>
        </LinearLayout>

</RelativeLayout>

    <RelativeLayout
        android:id="@+id/match"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x160"
        android:layout_below="@+id/video"
        android:layout_marginTop="@dimen/x7"
        android:background="#ffffff"


        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="软装搭配"
            android:textSize="20sp"
            android:textColor="#333333"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginLeft="@dimen/x12"
            />
        <TextView
            android:id="@+id/viedo_list_match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多视频>"
            android:textSize="16sp"
            android:textColor="#a4a4a4"
            android:layout_marginTop="@dimen/x12"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x4"
            />
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/ll_image_match"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x120">

                <ImageView
                    android:id="@+id/video_match1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/x100"
                    android:background="#ffea8e"
                    android:scaleType="fitXY"
                    />

                <ImageView
                    android:id="@+id/video_match2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x100"
                    android:layout_weight="1"
                    android:background="#ffea8e"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="@dimen/x3"
                    />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
    </com.example.tz.tuozhe.Utils.LazyScrollView>
</RelativeLayout>