<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_out"
    android:background="#ffffff"
    >
<ImageView
    android:id="@+id/head_image"
    android:layout_width="@dimen/x40"
    android:layout_height="@dimen/x40"
    android:layout_marginTop="@dimen/x15"
    android:layout_marginLeft="@dimen/x10"
    android:background="@drawable/head_shape"
    />
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type something"
        android:textSize="20sp"
        android:textColor="#030303"
        android:layout_marginTop="@dimen/x16"
        android:layout_toRightOf="@+id/head_image"
        android:layout_marginLeft="@dimen/x8"
        />
    <TextView
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1小时前"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/head_image"
        android:layout_below="@+id/user_name"
        android:layout_marginLeft="@dimen/x8"
        android:layout_marginTop="@dimen/x2"
        android:textColor="#797979"
        />
    <RadioButton
        android:id="@+id/attention_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_home"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/x18"
        android:layout_marginRight="@dimen/x10"
        android:textColor="#979797"
        android:button="@null"
        />
   <TextView
       android:id="@+id/message_text"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="这里是内容的地方"
       android:textSize="16sp"
       android:textColor="#030303"
       android:layout_below="@+id/head_image"
       android:layout_marginTop="@dimen/x10"
       android:layout_marginLeft="@dimen/x10"
       android:layout_marginRight="@dimen/x10"
       />
    <RelativeLayout
        android:id="@+id/rl_image_box"
        android:layout_below="@+id/message_text"
        android:layout_marginTop="@dimen/x6"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x175"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginLeft="@dimen/x10"
        >
        <ImageView
            android:id="@+id/one_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x160"
            android:layout_marginTop="@dimen/x6"
            />
        <LinearLayout
            android:id="@+id/two_ll_box"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x160"
            android:layout_marginTop="@dimen/x6"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/box_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/x3"
                />
            <ImageView
                android:id="@+id/box_two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/x3"
                />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/rl_image_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginBottom="@dimen/x10"
            android:drawableLeft="@drawable/location"
            android:layout_marginLeft="@dimen/x10"
            android:text="北京"
            android:drawablePadding="@dimen/x2"
            android:textSize="16sp"
            android:textColor="#979797"
            />
        <ImageView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginBottom="@dimen/x20"
            android:layout_alignParentRight="true"
            android:background="@drawable/transmit"
            android:layout_marginRight="@dimen/x15"
            />
        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginRight="@dimen/x20"
            android:layout_toLeftOf="@+id/share"
            android:drawableLeft="@drawable/comment"
            android:text="1314"
            android:drawablePadding="@dimen/x4"
            />
        <RelativeLayout
            android:id="@+id/like_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginRight="@dimen/x20"
            android:layout_toLeftOf="@+id/comment"
            android:drawableLeft="@drawable/like"
            android:layout_marginTop="@dimen/x10"
            >
            <RadioButton
                android:id="@+id/like_image"
                android:layout_width="@dimen/x14"
                android:layout_height="@dimen/x14"
                android:background="@drawable/selector_praise"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:button="@null"
                />
            <TextView
                android:id="@+id/like_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/like_image"
                android:layout_marginLeft="@dimen/x4"
                android:textColor="#979797"
                android:textSize="16sp"
                />
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>