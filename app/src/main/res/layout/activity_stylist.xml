<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tz.tuozhe.Activity.Stylist_Homepager"
    android:background="#ffffff"
    >

    <ImageView
        android:id="@+id/return_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/return_re"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginLeft="@dimen/x10"
        />
    <ImageView
        android:id="@+id/even_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:background="@drawable/icon_close"

        />
    <ImageView
        android:id="@+id/head_image"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/x80"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/return_"
        android:layout_marginTop="@dimen/x8"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#030303"
        android:textSize="26sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/head_image"
        android:layout_marginTop="@dimen/x10"
        />
    <TextView
        android:id="@+id/introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@+id/title_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x2"
        android:textColor="#999999"
        />
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/introduce"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x2"
        android:textSize="16sp"
        android:textColor="#999999"
        />
    <Button
        android:id="@+id/communication"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/x32"
        android:background="@drawable/shape_user_pass_kuang"
        android:text="立即沟通"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_below="@+id/price"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x10"
        />
    <LinearLayout
        android:id="@+id/ll_selector"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x55"
        android:orientation="horizontal"
        android:layout_below="@+id/communication"
        android:layout_marginTop="@dimen/x8"
        >
        <RelativeLayout
            android:id="@+id/make_an_appointment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/make_an_appointment_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#616161"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约"
                android:layout_below="@+id/make_an_appointment_number"
                android:layout_marginTop="@dimen/x2"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="#999999"
                />
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/x35"
            android:background="#d3d3d3"
            android:layout_marginTop="@dimen/x15"
            />

        <RelativeLayout
            android:id="@+id/written_permission"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/written_permission_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#616161"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签单"
                android:layout_below="@+id/written_permission_number"
                android:layout_marginTop="@dimen/x2"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="#999999"
                />
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/x35"
            android:background="#d3d3d3"
            android:layout_marginTop="@dimen/x15"
            />
        <RelativeLayout
            android:id="@+id/evaluate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/evaluate_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#616161"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评价"
                android:layout_below="@+id/evaluate_number"
                android:layout_marginTop="@dimen/x2"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="#999999"
                />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/yinying"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x10"
        android:background="#eaeaea"
        android:layout_below="@+id/ll_selector"
        />


</RelativeLayout>
