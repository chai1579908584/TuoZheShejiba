<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x15"
        android:text="9小时前"
        android:textColor="#999999"
        android:textSize="12sp"
        android:layout_marginLeft="@dimen/x10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/time"
        android:text="发表了动态"
        android:layout_marginTop="@dimen/x15"
        android:layout_marginLeft="@dimen/x2"
        android:textSize="12sp"
        android:textColor="#030303"
        />
    </RelativeLayout>
    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:layout_marginTop="@dimen/x6"
        android:layout_marginRight="@dimen/x10"
        android:text="极简设计200平！施工图同步。。。"
        android:textSize="16sp"
        android:textColor="#030303"
        android:layout_marginLeft="@dimen/x10"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/one_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x160"
        android:layout_marginTop="@dimen/x6"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginLeft="@dimen/x10"
        android:scaleType="fitXY"
        />
    <LinearLayout
        android:id="@+id/two_ll_box"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x160"
        android:layout_marginTop="@dimen/x6"
        android:layout_marginRight="@dimen/x10"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/x10"
        >
        <ImageView
            android:id="@+id/box_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/x3"
            />
        <ImageView
            android:id="@+id/box_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/x3"
            />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x175"
        android:layout_marginTop="@dimen/x6"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginLeft="@dimen/x10"
        >

    </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginBottom="@dimen/x10"
        android:drawableLeft="@drawable/location"
        android:layout_marginLeft="@dimen/x10"
        android:text="北京"
        android:drawablePadding="@dimen/x2"
        android:textSize="16sp"
        android:textColor="#979797"

        />
    <ImageView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginBottom="@dimen/x20"
        android:layout_alignParentRight="true"
        android:background="@drawable/transmit"
        android:layout_marginRight="@dimen/x15"
        />
    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginRight="@dimen/x20"
        android:layout_toLeftOf="@+id/share"
        android:drawableLeft="@drawable/comment"
        android:text="1314"
        android:drawablePadding="@dimen/x4"
        />
    <TextView
        android:id="@+id/praise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginRight="@dimen/x20"
        android:layout_toLeftOf="@+id/comment"
        android:drawableLeft="@drawable/like"
        android:text="520"
        android:drawablePadding="@dimen/x4"
        />
    </RelativeLayout>
</LinearLayout>